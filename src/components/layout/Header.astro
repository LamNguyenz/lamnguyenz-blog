---
import HeaderLink from "@/components/layout/HeaderLink.astro";
import ThemeSelect from "@/components/layout/ThemeSelect.astro";
---

<header id="header" class="content-center sticky">
  <div class="blur-background"></div>
  <div class="content-container relative z-10">
    <nav class="flex gap-4 justify-between">
      <div class="flex gap-4 items-center">
        <a href="/">
          <img class="w-8 h-8 shrink-0" src="/logo.svg" alt="Logo" />
        </a>
        <div class="flex gap-2">
          <HeaderLink href="/">Home</HeaderLink>
          <!-- <HeaderLink href="/about">About</HeaderLink> -->
        </div>
      </div>
      <div class="inline-flex gap-2 items-center">
        <ThemeSelect />
      </div>
    </nav>
    {
      Astro.slots.has("mobile-toc") && (
        <div class="mobile-toc">
          <slot name="mobile-toc" />
        </div>
      )
    }
  </div>
</header>

<script>
  const addBlur = (header: HTMLElement | null) => {
    if (!header) return;

    if (window.scrollY > 0) {
      header.classList.add("sticky");
    } else {
      header.classList.remove("sticky");
    }
  };

  const header = document.getElementById("header");
  addBlur(header);

  window.addEventListener("scroll", () => {
    addBlur(header);
  });
</script>

<style>
  /* Base header styles */
  #header {
    position: sticky;
    height: var(--header-height);
    z-index: var(--z-index-header);
    top: 0;
  }

  .mobile-toc {
    display: none;
  }

  @media screen and (max-width: 1240px) {
    #header:has(.mobile-toc) {
      --header-height: 5rem;
    }

    .mobile-toc {
      display: block;
    }
  }

  /* Blur background effect */
  .blur-background {
    position: absolute;
    inset: 0;
    z-index: 1;

    /* Blur effect */
    -webkit-backdrop-filter: blur(5px);
    backdrop-filter: blur(5px);
    pointer-events: none;
    transition: opacity 0.3s;
  }

  /* Background overlay */
  .blur-background::after {
    content: "";
    position: absolute;
    inset: 0;
    background-color: var(--page-background);
    opacity: 0.85;
  }

  /* Hide blur when not sticky */
  #header:not(.sticky) .blur-background {
    opacity: 0;
  }
</style>

<style is:global>
  [id] {
    scroll-margin-top: var(--header-height);
  }
</style>
