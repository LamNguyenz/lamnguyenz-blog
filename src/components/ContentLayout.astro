<div class="flex justify-center">
  <!-- Left sidebar in case we need -->
  <aside class="sidebar-container">
    <div class="sidebar left-sidebar">
      <slot name="left-sidebar" />
    </div>
  </aside>
  <div class="main-panel">
    <slot />
  </div>
  <aside class="sidebar-container">
    <div class="sidebar right-sidebar">
      <slot name="right-sidebar" />
    </div>
  </aside>
</div>

<style>
  .main-panel {
    isolation: isolate;
    width: var(--content-width);
  }

  .sidebar-container {
    flex: 1;
    padding-left: var(--sidebar-pad-x);
    padding-right: var(--sidebar-pad-x);
    position: relative;
  }

  .sidebar {
    max-width: var(--sidebar-width);
  }

  .right-sidebar {
    max-height: calc(100vh - var(--header-height) - 8px);
    overflow-y: auto;
    position: sticky;
    top: var(--header-height);
  }

  .right-sidebar :global(h2) {
    color: var(--scheme-gray-2);
  }

  .right-sidebar :global(:where(a)) {
    display: block;
    font-size: var(--font-size--1);
    text-decoration: none;
    color: var(--scheme-gray-3);
    overflow-wrap: anywhere;
  }

  .right-sidebar :global(:where(a):hover) {
    color: var(--color-base-content);
  }

  @media (max-width: 1240px) {
    .sidebar {
      display: none;
    }
  }
</style>
